<Ui xmlns="http://www.blizzard.com/wow/ui/">

    <!-- Action Bar Mini Panel -->
    <Frame name="BetterEditMode_ActionBarMiniPanel" inherits="BEM_PanelTemplate" hidden="true">
        <Scripts>
            <OnLoad inherit="append">
                self.title:SetText("Action Bars Enabled")
            </OnLoad>
        </Scripts>
    </Frame>

    <!-- Bindings Panel -->
    <Frame name="BetterEditMode_BindingsPanel" inherits="BEM_PanelTemplate" hidden="true">
        <Scripts>
            <OnLoad inherit="append">
                self.title:SetText("Bindings")
            </OnLoad>
        </Scripts>
    </Frame>

    <!-- GameplayEnhancements Panel -->
    <Frame name="BetterEditMode_GameplayEnhancementsPanel" inherits="BEM_PanelTemplate" hidden="true">
    <Scripts>
        <OnLoad inherit="append">
            self.title:SetText("Gameplay Enhancements")
        </OnLoad>
    </Scripts>
    <Frames>
        <Button parentKey="BossWarningsButton" inherits="UIPanelButtonTemplate" text="Boss Warnings">
            <Size x="100" y="22"/>
            <Anchors>
                <Anchor point="RIGHT" relativeKey="$parent.Title" relativePoint="RIGHT" x="-10" y="73"/>
            </Anchors>
            <Scripts>
                <OnClick>
                    HideUIPanel(EditModeManagerFrame)
                    Settings.OpenToCategory(Settings.ADVANCED_OPTIONS_CATEGORY_ID)
                </OnClick>
            </Scripts>
        </Button>
    </Frames>
</Frame>

</Ui>
